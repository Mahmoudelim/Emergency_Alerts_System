<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.example.emergency_alert_system.EMP.Medical_Info.medicalInfoForAcceptance">
<TextView
    android:id="@+id/EmergencyTxt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:text="Emergency Case Chronic"
    android:textColor="@color/black"
    android:textSize="25sp"
    android:textStyle="bold"
    />
   <ListView
       android:id="@+id/case_chronic"
       android:layout_width="match_parent"
       android:layout_marginTop="20dp"
       android:layout_height="wrap_content"
       android:layout_margin="20dp"
       app:layout_constraintTop_toBottomOf="@+id/EmergencyTxt"
       app:layout_constraintStart_toStartOf="parent"
       tools:listitem="@layout/chronic_item"

        />

   <TextView
       android:id="@+id/Emergency_medicine"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="20dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:text="Emergency Case Medicine"
       android:textColor="@color/black"
       android:textSize="25sp"
       android:textStyle="bold"
       app:layout_constraintTop_toBottomOf="@id/case_chronic"
       />
   <ListView
       android:id="@+id/case_medicine"
       android:layout_width="match_parent"
       android:layout_marginTop="20dp"
       android:layout_height="wrap_content"
       android:layout_margin="20dp"
       app:layout_constraintTop_toBottomOf="@+id/Emergency_medicine"
       app:layout_constraintStart_toStartOf="parent"
       tools:listitem="@layout/case_medicine_item"

       />


</androidx.constraintlayout.widget.ConstraintLayout>